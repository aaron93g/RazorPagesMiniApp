@page
@model PersonnelInformation.Pages.PersonnelNamesModel
@{
    ViewData["Title"] = "Personnel Names";
}

<h2>Names of Personnel</h2>

<form method="post">
    <div class="form-group">

        @for (int i = 0; i < Model.Names.Count; i++)
        {
            <input type="hidden" asp-for="Names[i]" />
        }

        <input asp-for="FirstName" type="text" placeholder="First Name Here" />
        <input asp-for="LastName" type="text" placeholder="Last Name Here" />
        <button type="submit" class="btn btn-primary">submit</button>
    </div>
</form>


<h2>Personnel Names: </h2>
    @foreach(var item in Model.Names)
    {
        <h3>@item</h3>
    }
